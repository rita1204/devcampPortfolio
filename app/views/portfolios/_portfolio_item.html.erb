<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_img(portfolio_item.thumb_image.url.to_s, 'thumb') %>

    <div class="card-body">
      <p class="card-text"> 
        <span><%= link_to "#{portfolio_item.title}", portfolio_show_path(portfolio_item) %></span>
        <p> <%= portfolio_item.subtitle %> </p>
      </p>
    </div>
  </div>
</div>
