<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class='row'>

    <div class='col-md-6'>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_area :subtitle, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <label class='btn btn-primary'>
          Upload a main image<%= form.file_field :main_image,style: 'display:none' %>
        </label>
        
      </div>
      <div class='form-group'>
        <label class='btn btn-primary'>
          Upload a thumb image<%= form.file_field :thumb_image,style: 'display:none' %>
        </label>
      </div>
    </div>

    <div class='col-md-6'>
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>

    <hr>

    <div class='col-md-12'>
      <h2>Technologies Used</h2>
      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add Technologies', form, :technologies %>
        </div>

          <div class="form-group">
            <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary ' %>
          </div>
      </div>
    </div>
  </div>

<% end %>