<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

  <div>
    <% @blogs.each do |blog| %>
      <div>
        <p><%= blog.title.upcase %></p>
        <p><%= blog.body %></p>
        <p><%= link_to blog.status, toggle_status_blog_path(blog) %></p>
        <p><%= link_to 'Show', blog %></p>
        <p><%= link_to 'Edit', edit_blog_path(blog) %></p>
        <p><%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
</div>

